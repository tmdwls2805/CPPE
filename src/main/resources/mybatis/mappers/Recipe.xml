<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoseo.rot.recipe.RecipeRepository">
	<insert id="addRecipe" parameterType="Recipe">
		INSERT INTO recipe VALUES
		(
		#{reciId},
		#{reciName},
		#{reciNum},
		#{reciSub},
		#{reciIntro},
		#{reciMainPic},
		#{reciFind},
		#{reciSit},
		#{reciWay},
		#{reciMat},
		#{reciPer},
		#{reciTim},
		#{reciLev},
		#{reciTip},
		#{reciComPic1},
		#{reciComPic2},
		#{reciComPic3},
		#{reciComPic4},
		now()
		);
	</insert>
	
	<insert id="addMetrial" parameterType="Metrial">
		INSERT INTO recipe VALUES
		(
		#{reciNum},
		#{matNum},
		#{matName}
		);
	</insert>
	
	<insert id="addMetrial2" parameterType="Metrial2">
		INSERT INTO recipe VALUES
		(
		#{reciNum},
		#{matNum},
		#{mat2Num},
		#{mat2Find},
		#{mat2Vol}
		);
	</insert>
	
	<insert id="addRecipeOrder" parameterType="RecipeOrder">
		INSERT INTO recipe VALUES
		(
		#{reciNum},
		#{orderNum},
		#{orderContent},
		#{orderPic}
		);
	</insert>
</mapper>